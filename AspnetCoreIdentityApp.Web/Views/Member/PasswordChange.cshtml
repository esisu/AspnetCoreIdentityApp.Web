@model PasswordChangeViewModel
@{
    ViewData["Title"] = "Şifremi Değiştir";
    Layout = "_Layout";
}

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}


<div class="row">
    <div class="col-md-4 offset-md-4">
        <h1>Şifremi Değiştir</h1>


        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        @*<form asp-controller="Home" asp-action="SignIn" asp-route-returnurl="@Context.Request.Query["returnurl"]" method="post">*@
        <form method="post">

            <div class="mb-3">
                <label for="PasswordOld" class="form-label" asp-for="PasswordOld"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordOld" class=" form-control">
                    <span asp-validation-for="PasswordOld" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label for="PasswordNew" class="form-label" asp-for="PasswordNew"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordNew" class=" form-control">
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label for="PasswordConfirm" class="form-label" asp-for="PasswordConfirm"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordConfirm" class="form-control">
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Şifremi Değiştir</button>

        </form>

    </div>
</div>