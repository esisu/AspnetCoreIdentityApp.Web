@model List<AdminModel.RoleViewModel>
@{
    ViewData["Title"] = "Role Yönetimi";
}

<a class="btn btn-warning" asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin"> Role Ekle</a>

<hr />

<h1>Rol Listesi</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}


<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Rol Adı</th>
            <th>işlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="my-1" asp-area="Admin" asp-controller="Roles" asp-action="RoleUpdate" asp-route-id="@item.Id">Güncelle</a>
                    <a class="my-1" asp-area="Admin" asp-controller="Roles" asp-action="RoleDelete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>