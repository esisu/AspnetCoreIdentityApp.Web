@model List<AdminModel.AssignRoleToUserViewModel>

@{
    ViewData["Title"] = "Role Atama Kullanıcıya";
}

<h1>Role Atama Kullanıcıya</h1>
<hr />
<div class="row">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }


    <div class="col-md-6 offset-md-3">
        <form asp-action="AssignRoleToUser" method="post">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@Model[i].Exist">
                    <label class="form-check-label" for="flexCheckDefault">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id" />
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Ata Rol" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
<hr />
<div>
    <a asp-action="Index">Geri Dön</a>
</div>
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}